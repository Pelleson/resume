{
	"compilerOptions": {
		"target": "es6",
		"allowJs": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"rootDirs": [
			"src",
			"stories"
		],
		"baseUrl": ".",
		"paths": {
			"components/*": [
				"../src/components/*"
			],
			"content/*": [
				"../src/components/content/*"
			],
			"containers": [
				"../src/containers/"
			],
			"stores": [
				"../src/stores/"
			],
			"models": [
				"../src/models/"
			],
			"utils": [
				"../src/utils/"
			],
			"interfaces": [
				"../src/interfaces/"
			],
			"validation": [
				"../src/utils/validation.ts"
			],
			"hoc/*": [
				"../src/hoc/*"
			],
			"controllers": [
				"../src/controllers/"
			],
			"services": [
				"../src/services/"
			]
		},
		"jsx": "react",
		"outDir": "dist",
		"lib": [
			"dom",
			"es2017",
			"esnext.asynciterable"
		],
		"types": [
			"node",
			"webpack-env",
			"jest"
		]
	},
	"include": [
		"src",
		"types",
		"stories"
	],
	"exclude": [
		"node_modules"
	]
}