{
	"compilerOptions": {
		"target": "es6",
		"allowJs": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"components/*": [
				"src/components/*"
			],
			"content/*": [
				"src/components/content/*"
			],
			"containers": [
				"src/containers/"
			],
			"stores": [
				"src/stores/"
			],
			"models": [
				"src/models/"
			],
			"utils": [
				"src/utils/"
			],
			"interfaces": [
				"src/interfaces/"
			],
			"validation": [
				"src/utils/validation.ts"
			]
		},
		"jsx": "react",
		"outDir": "dist",
		"lib": [
			"dom",
			"es2017",
			"esnext.asynciterable"
		],
		"types": [
			"node",
			"jest"
		]
	},
	"include": [
		"src",
		"types"
	],
	"exclude": [
		"node_modules"
	]
}